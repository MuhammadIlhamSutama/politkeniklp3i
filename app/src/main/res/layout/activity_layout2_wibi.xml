<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout2_wibi"
    android:background="@drawable/wb_peminatan">

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="wrap_content"
        android:layout_height="173dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/akreditasi_1"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="275dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="570dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <!-- CardView 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/abu"
            app:cardCornerRadius="15dp"
            android:onClick="pindah10"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="INFORMATIKA KOMPUTER"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="@color/abu"
            app:cardCornerRadius="15dp"
            android:onClick="pindah11"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MULTIMEDIA DESAIN"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <ImageButton
        android:id="@+id/pin"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/logo"
        android:contentDescription="Icon 1"
        android:onClick="pindah5"
        android:scaleType="centerCrop" />

</RelativeLayout>