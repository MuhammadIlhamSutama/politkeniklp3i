<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WibiMain"
    android:background="@drawable/page_cpl">


    <TextView
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:text="@string/pencapaian_pembelajaran"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="380dp"
        android:layout_marginStart="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="440dp"
        android:layout_marginStart="40dp"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- CardView 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/abu"
            android:onClick="pindah20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Aspek Sikap\nDan Tata Nilai"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/cream"
            android:onClick="pindah30"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Aspek Penguasaan\nPengetahuan"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/cream"
            android:layout_marginTop="15dp"
            android:onClick="pindah32"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Aspek Keterampilan\nUmum"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/abu"
            android:onClick="pindah34"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Aspek Penguasaan\nPengetahuan"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <ImageButton
        android:id="@+id/pin"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/logo"
        android:onClick="pindah25"
        android:scaleType="centerCrop" />

</RelativeLayout>